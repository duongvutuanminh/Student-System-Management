package screen;

import javax.swing.JOptionPane;

public class MessagePane {
  public static void main(String[] args) {
    JOptionPane optionPane = new JOptionPane("This message will disappear in 3 seconds", JOptionPane.INFORMATION_MESSAGE);
    for (int i = 3; i > 0; i--) {
    	System.out.println(i);
      optionPane.setMessage("This message will disappear in " + i + " seconds");
      try {
        Thread.sleep(1000);
      } catch (InterruptedException e) {
        // handle the exception
      }
    }
    optionPane.createDialog("Countdown").setVisible(true);
    optionPane.getTopLevelAncestor().setVisible(false);
  }
}
